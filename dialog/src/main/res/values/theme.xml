<!--<?xml version="1.0" encoding="utf-8"?>-->
<resources>
    <!-- 標準的なテーマ：colorPrimary ベースの配色 -->
    <style name="UtDialogTheme">
        <!-- Colors for Dialog Body -->
        <item name="color_dlg_bg">?attr/colorSurface</item>
        <item name="color_dlg_text">?attr/colorOnSurface</item>
        <item name="color_dlg_border">?attr/colorPrimary</item>

        <!-- Colors for Dialog Title bar -->
        <item name="color_dlg_title_bg">?attr/colorPrimary</item>
        <item name="color_dlg_title_text">?attr/colorOnPrimary</item>
        <item name="color_dlg_title_progress">?attr/colorTertiaryContainer</item>

        <!-- Colors for Dialog Footer -->
        <item name="color_dlg_footer_bg">?attr/colorPrimaryContainer</item>
        <item name="color_footer_button_text">?attr/colorOnPrimaryContainer</item>
        <item name="color_footer_button_text_pressed">?attr/colorPrimary</item>
        <item name="color_footer_button_text_disabled">@color/gray40</item>
    </style>

    <!-- colorSecondary ベースの配色 -->
    <style name="UtDialogThemeSecondary" parent="UtDialogTheme">
        <!-- Colors for Dialog Body -->
        <item name="color_dlg_border">?attr/colorSecondary</item>

        <!-- Colors for Dialog Title bar -->
        <item name="color_dlg_title_bg">?attr/colorSecondary</item>
        <item name="color_dlg_title_text">?attr/colorOnSecondary</item>
        <item name="color_dlg_title_progress">?attr/colorSecondaryContainer</item>

        <!-- Colors for Dialog Footer -->
        <item name="color_dlg_footer_bg">?attr/colorSecondaryContainer</item>
        <item name="color_footer_button_text">?attr/colorOnSecondaryContainer</item>
        <item name="color_footer_button_text_pressed">?attr/colorSecondary</item>
    </style>

    <!-- colorTertiary ベースの配色 -->
    <style name="UtDialogThemeTertiary" parent="UtDialogTheme">
        <!-- Colors for Dialog Body -->
        <item name="color_dlg_border">?attr/colorTertiary</item>

        <!-- Colors for Dialog Title bar -->
        <item name="color_dlg_title_bg">?attr/colorTertiary</item>
        <item name="color_dlg_title_text">?attr/colorOnTertiary</item>
        <item name="color_dlg_title_progress">?attr/colorPrimaryContainer</item>

        <!-- Colors for Dialog Footer -->
        <item name="color_dlg_footer_bg">?attr/colorTertiaryContainer</item>
        <item name="color_footer_button_text">?attr/colorOnTertiaryContainer</item>
        <item name="color_footer_button_text_pressed">?attr/colorTertiary</item>
    </style>

    <!-- Legacy Dialog Theme -->
    <style name="UtDialogLegacyTheme" parent="UtDialogTheme">
        <!-- Colors for Legacy DONE button -->
        <item name="color_legacy_dlg_blue_button_bg_normal">?attr/colorSecondary</item>
        <item name="color_legacy_dlg_blue_button_bg_pressed">@color/secondary_70</item>
        <item name="color_legacy_dlg_blue_button_bg_disabled">@color/on_surface_30</item>

        <item name="color_legacy_dlg_blue_button_border_normal">@color/secondary_70</item>
        <item name="color_legacy_dlg_blue_button_border_pressed">@color/secondary_70</item>
        <item name="color_legacy_dlg_blue_button_border_disabled">@color/on_surface_50</item>

        <item name="color_legacy_dlg_blue_button_text_normal">?attr/colorOnSecondary</item>
        <item name="color_legacy_dlg_blue_button_text_pressed">@color/on_secondary_70</item>
        <item name="color_legacy_dlg_blue_button_text_disabled">@color/on_surface_70</item>

        <!-- Colors for Legacy Cancel button -->
        <item name="color_legacy_dlg_white_button_bg_normal">?attr/colorSurface</item>
        <item name="color_legacy_dlg_white_button_bg_pressed">@color/on_surface_50</item>
        <item name="color_legacy_dlg_white_button_bg_disabled">@color/on_surface_30</item>

        <item name="color_legacy_dlg_white_button_border_normal">@color/on_surface_50</item>
        <item name="color_legacy_dlg_white_button_border_pressed">@color/on_surface_50</item>
        <item name="color_legacy_dlg_white_button_border_disabled">@color/on_surface_50</item>

        <item name="color_legacy_dlg_white_button_text_normal">?attr/colorOnSurface</item>
        <item name="color_legacy_dlg_white_button_text_pressed">?attr/colorOnSurface</item>
        <item name="color_legacy_dlg_white_button_text_disabled">@color/on_surface_70</item>

        <!-- Title Separator for Legacy Header -->
        <item name="color_legacy_dlg_title_separator_upper">@color/transparent</item>
        <item name="color_legacy_dlg_title_separator_lower">@color/transparent</item>
    </style>

